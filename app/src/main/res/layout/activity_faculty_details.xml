<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacultyDetails">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/white"
        android:id="@+id/ToolbarFacultyDetails">

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FacultyImage"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/ToolbarFacultyDetails">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivCircle"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/FacultyName"
            android:layout_width="match_parent"
            android:layout_below="@+id/ivCircle"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="Faculty Name"
            android:gravity="center_horizontal">
        </TextView>
    </RelativeLayout>
    <androidx.cardview.widget.CardView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:id="@+id/CardViewPhone"
        android:layout_below="@+id/FacultyImage"
        android:layout_marginTop="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPhoneLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Phone number"
                android:textColor="#4B63EC"
              android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:id="@+id/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tvPhoneLabel"
                android:background="@color/colorPrimary">
            </TextView>

            <TextView
                android:id="@+id/tvPhonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:textIsSelectable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="9551639294"
                android:textSize="20sp" />



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:id="@+id/CardViewEmail"
        android:layout_below="@+id/CardViewPhone"
        android:layout_marginTop="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Email"
                android:textColor="#4B63EC"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:id="@+id/line1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tvEmailLabel"
                android:background="@color/colorPrimary">
            </TextView>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:textIsSelectable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="iniyan.cool3@gmail.com"
                android:textSize="20sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:id="@+id/CardViewSubject"
        android:layout_below="@+id/CardViewEmail"
        android:layout_marginTop="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSubjectLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Subject"
                android:textColor="#4B63EC"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:id="@+id/line2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tvSubjectLabel"
                android:background="@color/colorPrimary">
            </TextView>

            <TextView
                android:id="@+id/faculty_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Mathematics"
                android:textSize="20sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>
</ScrollView>